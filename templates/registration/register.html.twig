{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Création de compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo, {label: 'Pseudonyme'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}
        {{ form_row(registrationForm.nom, {label: 'Nom'}) }}
        {{ form_row(registrationForm.prenom, {label: 'Prénom'}) }}
        {{ form_row(registrationForm.email, {label: 'Adresse mail'}) }}
        {{ form_row(registrationForm.civilite, {label: 'Civilité'}) }}
        <button type="submit" class="btn btn-primary">Ouvrir un compte</button>
    {{ form_end(registrationForm) }}
{% endblock %}
